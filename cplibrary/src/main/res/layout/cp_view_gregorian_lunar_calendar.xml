<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ResourceName">

    <cn.lee.cplibrary.widget.picker.widget.NumberPickerView
        android:id="@+id/picker_year"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="year_picker"
        app:cp_npv_AlternativeTextArrayWithoutMeasureHint="@array/cp_npv_lunar_year_without_measure_hint"
        app:cp_npv_RespondChangeOnDetached="false"
        app:cp_npv_TextSizeNormal="16sp"
        app:cp_npv_TextSizeSelected="18sp"
        app:cp_npv_TextSizeHint="14sp"
        app:cp_npv_ShowDivider="true"
        app:cp_npv_ShowTextBgSelected="false"
        app:cp_npv_TextBgColorSelected="@color/cp_glc_select_bg_color"
        />
    <!--app:npv_HintText="@string/cp_year"-->
    <cn.lee.cplibrary.widget.picker.widget.NumberPickerView
        android:id="@+id/picker_month"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:contentDescription="month_picker"
        app:cp_npv_AlternativeTextArrayWithoutMeasureHint="@array/cp_npv_lunar_month_without_measure_hint"
        app:cp_npv_RespondChangeOnDetached="false"
        app:cp_npv_TextSizeNormal="16sp"
        app:cp_npv_TextSizeSelected="18sp"
        app:cp_npv_TextSizeHint="14sp"
        app:cp_npv_MarginStartOfHint="1dp"
        app:cp_npv_ShowTextBgSelected="false"
        app:cp_npv_TextBgColorSelected="@color/cp_glc_select_bg_color"/>
    <!--android:layout_marginLeft="3dp"-->
    <!--android:layout_marginRight="3dp"-->
        <!--app:npv_HintText="@string/cp_month"-->
    <cn.lee.cplibrary.widget.picker.widget.NumberPickerView
        android:id="@+id/picker_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="day_picker"
        app:cp_npv_AlternativeHint="@string/cp_day"
        app:cp_npv_AlternativeTextArrayWithMeasureHint="@array/cp_npv_lunar_day_with_measure_hint"
        app:cp_npv_AlternativeTextArrayWithoutMeasureHint="@array/cp_npv_lunar_day_with_measure_hint"
        app:cp_npv_RespondChangeOnDetached="false"
        app:cp_npv_TextSizeNormal="16sp"
        app:cp_npv_TextSizeSelected="18sp"
        app:cp_npv_TextSizeHint="14sp"
        app:cp_npv_MarginStartOfHint="1dp"
        app:cp_npv_ShowTextBgSelected="false"
        app:cp_npv_TextBgColorSelected="@color/cp_glc_select_bg_color"/>
    <!--app:npv_HintText="@string/cp_day"-->
    <cn.lee.cplibrary.widget.picker.widget.NumberPickerView
        android:id="@+id/picker_hour"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="day_picker"
        app:cp_npv_AlternativeHint="@string/cp_hour"
        app:cp_npv_AlternativeTextArrayWithMeasureHint="@array/cp_npv_lunar_day_with_measure_hint"
        app:cp_npv_AlternativeTextArrayWithoutMeasureHint="@array/cp_npv_lunar_day_with_measure_hint"
        app:cp_npv_RespondChangeOnDetached="false"
        app:cp_npv_TextSizeNormal="16sp"
        app:cp_npv_TextSizeSelected="18sp"
        app:cp_npv_TextSizeHint="14sp"
        app:cp_npv_MarginStartOfHint="1dp"
        app:cp_npv_ShowTextBgSelected="false"
        app:cp_npv_TextBgColorSelected="@color/cp_glc_select_bg_color"/>
    <!--app:npv_HintText="@string/cp_hour"-->
</merge>